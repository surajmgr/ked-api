{
  "name": "ked-api",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev:cf": "wrangler dev",
    "dev": "tsx watch src/index.node.ts",
    "deploy:cf": "npm run biome && wrangler deploy --minify",
    "start": "tsx src/index.node.ts",
    "type-check": "tsc --noEmit",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx ./src/db/migrate.ts",
    "db:migrate:prod": "NODE_ENV=production tsx ./src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "@hono/zod-openapi": "^1.1.3",
    "@scalar/hono-api-reference": "^0.9.22",
    "@sentry/cloudflare": "^10.29.0",
    "@sentry/node": "^10.29.0",
    "drizzle-cuid2": "^2.1.0",
    "drizzle-orm": "^0.44.6",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.10.1",
    "ioredis": "^5.8.2",
    "postgres": "^3.4.7",
    "typesense-ts": "^0.2.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@types/ioredis": "^4.28.10",
    "@types/node": "^24.8.0",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wrangler": "^4.43.0"
  }
}
